<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Basic resets */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    /* Page styling */
    body {
      background-color: #f8f9fa;
      padding: 20px;
    }

    h1 {
      color: #333;
      font-size: 1.5rem;
      text-align: center;
      margin-bottom: 20px;
    }

    /* Header with search bar */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .search-bar {
      width: 100%;
      padding: 10px;
      border-radius: 20px;
      border: 1px solid #ddd;
    }

    /* Order Card Styling */
    .order-card {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .order-header {
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 5px;
      margin-bottom: 10px;
    }

    .order-header h2 {
      font-size: 14px;
      color: #007bff;
    }

    .order-status {
      color: #28a745;
      font-weight: bold;
      font-size: 0.9rem;
    }

    .order-date {
      font-size: 0.85rem;
      color: #555;
    }

    /* Product List Styling */
    .product-list {
      list-style-type: none;
      padding: 0;
      margin-top: 10px;
    }

    .product-item {
      display: flex;
      align-items: center;
      border-bottom: 1px solid #f0f0f0;
      padding: 10px 0;
      position: relative;
    }

    .product-item:last-child {
      border-bottom: none;
    }

    /* Product Image */
    .product-image {
      width: 60px;
      height: 60px;
      border-radius: 5px;
      object-fit: cover;
      margin-right: 15px;
    }

    /* Product Details */
    .product-details {
      flex-grow: 1;
    }

    .product-name {
      font-weight: bold;
      color: #333;
      font-size: 0.9rem;
    }

    .product-price {
      color: #28a745;
      font-weight: bold;
      font-size: 0.85rem;
    }

    /* Reorder button */
    .reorder-button {
      position: absolute;
      right: 0;
      padding: 5px 10px;
      background-color: #007bff;
      color: #fff;
      border-radius: 5px;
      font-size: 0.8rem;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .reorder-button:hover {
      background-color: #0056b3;
    }

    /* Buy Again Section */
    .suggestions {
      margin-top: 30px;
    }

    .suggestions h2 {
      font-size: 1.2rem;
      color: #333;
      margin-bottom: 10px;
    }

    .suggestion-items {
      display: flex;
      overflow-x: auto;
      gap: 10px;
    }

    .suggestion-item {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px;
      min-width: 120px;
      text-align: center;
    }

    .suggestion-item img {
      width: 100%;
      height: 80px;
      object-fit: cover;
      border-radius: 5px;
    }

    .suggestion-name {
      font-size: 0.8rem;
      color: #333;
      margin-top: 5px;
    }

    /* Responsive adjustments */
    @media (max-width: 600px) {
      .product-image {
        width: 50px;
        height: 50px;
      }

      .product-name {
        font-size: 0.8rem;
      }

      .product-price,
      .order-status,
      .order-date {
        font-size: 0.75rem;
      }
    }
    .flex{
      display: flex;
    }
    .justify-between{
      justify-content: space-between;
    }
    a{
      text-decoration: none;
    }
  </style>
</head>

<body>
  <div class="flex justify-between items-center py-4">
    <a href="/" class="text-lg inline-flex items-center">
        <i class="ri-arrow-left-s-line"></i>
    </a>
    <h1 class="text-xl font-semibold">My Orders</h1>
    <button class="text-lg"></button>
</div>
  
  <div class="header">
    <input type="text" class="search-bar" placeholder="Search all orders">
  </div>

  <% if (orders && orders.length > 0) { %>
    <% 
      // Sort orders by createdAt date in descending order (newest first)
      orders.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
    %>
    
    <% orders.forEach((order, index) => { %>
      <div class="order-card">
        <div class="order-header">
          <h2>Order <%= index + 1 %> (ID: <%= order._id %>)</h2>
          
          <!-- Store the arrival date logic in JavaScript -->
          <script>
            (function() {
              const orderId = "<%= order._id %>";
              const storageKey = `order_${orderId}_arrivalDate`;
              let arrivalDate;
              
              // Check if the arrival date is already in localStorage
              if (localStorage.getItem(storageKey)) {
                arrivalDate = new Date(localStorage.getItem(storageKey));
              } else {
                // Calculate a new arrival date and store it
                const randomChance = Math.random();
                arrivalDate = new Date();
                
                if (randomChance < 0.5) {
                  arrivalDate.setDate(arrivalDate.getDate() + 1); // Set for tomorrow
                } else {
                  const daysToAdd = Math.floor(Math.random() * 4) + 2;
                  arrivalDate = new Date("<%= order.createdAt %>");
                  arrivalDate.setDate(arrivalDate.getDate() + daysToAdd);
                }
                
                // Save the calculated arrival date in localStorage
                localStorage.setItem(storageKey, arrivalDate.toISOString());
              }
              
              // Get today's date without the time part for comparison
              const today = new Date();
              today.setHours(0, 0, 0, 0); // Reset time to midnight
              const tomorrow = new Date(today);
              tomorrow.setDate(today.getDate() + 1); // Calculate tomorrow's date

              // Determine the message to display
              let statusMessage;
              if (arrivalDate.toDateString() === tomorrow.toDateString()) {
                statusMessage = "Arriving Tomorrow"; // If the delivery date is tomorrow
              } else {
                statusMessage = `Arriving on: ${arrivalDate.toLocaleDateString()}`; // Otherwise, show the full date
              }

              // Display the arrival status
              document.write(`
                <span class="order-status">${statusMessage}</span>
              `);
            })();
          </script>
        </div>
        <p class="order-date">Placed on: <%= new Date(order.createdAt).toLocaleDateString() %> at <%= new Date(order.createdAt).toLocaleTimeString() %></p>
        
        <ul class="product-list">
          <% order.products.forEach(product => { %>
            <li class="product-item">
              <img src="data:image/jpg;base64,<%= product.image.toString('base64') %>" 
                   alt="<%= product.name %>" 
                   class="product-image">
              <div class="product-details">
                <span class="product-name"><%= product.name %></span>
                <span class="product-price">$<%= product.price %></span>
              </div>
              <div class="reorder-button">Reorder</div>
            </li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  <% } else { %>
    <p class="empty-message">You have no orders.</p>
  <% } %>
</body>

</html>